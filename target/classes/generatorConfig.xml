<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <properties resource="jdbc.properties"/>

    <context id="Mysql" targetRuntime="MyBatis3" defaultModelType="flat">
     <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>




        <commentGenerator>
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="suppressAllComments" value="true" />
        </commentGenerator>


        <jdbcConnection
                driverClass="com.mysql.jdbc.Driver"
                connectionURL="jdbc:mysql:///bookshelf"
                userId="root"
                password="12345678">
        </jdbcConnection>

        <!-- 实体类 -->
        <javaModelGenerator targetPackage="com.zyf.notebook.entity" targetProject="src/main/java"/>

        <!-- 映射 XML  -->
        <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources"/>

        <!--  DAO -->
        <javaClientGenerator
                targetPackage="com.zyf.notebook.mapper"
                targetProject="src/main/java"
                type="XMLMAPPER"/>

        <!-- 配置需要指定生成的数据库和表，% 代表所有表 -->
        <!--去除example-->
        <table catalog="bookshelf" tableName="%"  enableCountByExample="false" enableUpdateByExample="false"
               enableDeleteByExample="false" enableSelectByExample="false" selectByExampleQueryId="false">
            <!-- mysql 配置 -->
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
        </table>

    </context>
</generatorConfiguration>